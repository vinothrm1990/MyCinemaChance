                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout42">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="25dp"
                        android:fontFamily="@font/sans_regular"
                        android:gravity="left"
                        android:text="Address *"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <com.libizo.CustomEditText
                        android:id="@+id/mem_et_address"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:gravity="top|left"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:libIZO_clearIconTint="#000000"
                        app:libIZO_setBorderColor="#50000000"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="40dp"
                        app:libIZO_setFont="@string/s_regular"
